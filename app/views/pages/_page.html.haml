%h1= @page.title

- if admin?
  #editable{contenteditable: 'true', data: {update_url: page_update_content_url(@page)}}
    = raw @page.content

  = link_to 'Edit', edit_page_path(@page)
  - unless @page.main?
    = link_to 'Destroy', @page, method: :delete, data: { confirm: 'Are you sure?' }
- else
  = raw @page.content